{
    "manifest_version": 2,
    "name": "My Extension",
    "version": "1.0",
    "description": "Description of your extension",
    "permissions": [
      "activeTab"
    ],
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "main.html"
    },
    "icons": {
      "48": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["main.js"]
      }
    ]
  }
  